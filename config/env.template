# =============================================================================
# AUTOMATIC SELF-HEALING BOT - ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains all API keys, credentials, and configuration settings.
# 
# SETUP INSTRUCTIONS:
# 1. Copy this file to .env: cp env.template .env
# 2. Replace placeholder values with your actual keys
# 3. Or run: python setup_env.py (for interactive setup)
#
# For detailed setup guide, see: ENV_SETUP_GUIDE.md
# =============================================================================

# -----------------------------------------------------------------------------
# AI Configuration (REQUIRED for AI Log Analysis)
# -----------------------------------------------------------------------------
# Get your free API key from: https://makersuite.google.com/app/apikey
# This is REQUIRED for the AI-powered log analysis feature
GEMINI_API_KEY=your_gemini_api_key_here

# Alternative (both work, GEMINI_API_KEY takes precedence)
GOOGLE_API_KEY=your_google_api_key_here

# -----------------------------------------------------------------------------
# Slack Integration (OPTIONAL)
# -----------------------------------------------------------------------------
# For sending alerts and notifications to Slack
# Get webhook URL from: https://api.slack.com/messaging/webhooks
SLACK_WEBHOOK=your_slack_webhook_url_here

# -----------------------------------------------------------------------------
# AWS S3 Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# For uploading logs and incident reports to S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your_bucket_name

# -----------------------------------------------------------------------------
# Grafana Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Admin password for Grafana dashboard
GRAFANA_ADMIN_PASSWORD=admin

# -----------------------------------------------------------------------------
# Port Configuration (OPTIONAL - Defaults work for most cases)
# -----------------------------------------------------------------------------
# Override these only if you have port conflicts
MODEL_PORT=8080
HEALING_DASHBOARD_PORT=5001
NETWORK_ANALYZER_PORT=8000
INCIDENT_BOT_PORT=8001
MONITORING_SERVER_PORT=5000

# -----------------------------------------------------------------------------
# Self-Healing Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Enable/disable automatic self-healing
SELF_HEALING_ENABLED=false

# Confidence threshold for auto-healing (0.0 to 1.0)
# Higher = more conservative, only heal high-confidence issues
SELF_HEALING_CONFIDENCE_THRESHOLD=0.8

# -----------------------------------------------------------------------------
# Service URLs (OPTIONAL - Auto-configured for native mode)
# -----------------------------------------------------------------------------
# These are auto-detected, only override if needed
# MODEL_URL=http://localhost:8080
# NETWORK_ANALYZER_URL=http://localhost:8000
# MONITORING_SERVER_URL=http://localhost:5000

# -----------------------------------------------------------------------------
# Discord Integration (OPTIONAL)
# -----------------------------------------------------------------------------
# For sending alerts and notifications to Discord
# Get webhook URL from: Discord Server Settings > Integrations > Webhooks
DISCORD_WEBHOOK=your_discord_webhook_url_here
# Alternative name (for backward compatibility)
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# -----------------------------------------------------------------------------
# CORS Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Allowed origins for CORS (comma-separated)
# Default: http://localhost:5001,http://localhost:3000,http://127.0.0.1:5001,http://127.0.0.1:3000
# Set to "*" to allow all origins (NOT RECOMMENDED for production)
CORS_ORIGINS=http://localhost:5001,http://localhost:3000,http://127.0.0.1:5001,http://127.0.0.1:3000
# Allow all origins (only in development, set to "true" to enable)
CORS_ALLOW_ALL=false

# -----------------------------------------------------------------------------
# Flask/Debug Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Flask environment (development, production, testing)
# In production, set to "production" to disable debug mode
FLASK_ENV=production
# Enable Flask debug mode (only in development)
# Set to "true" or "1" to enable debug mode
FLASK_DEBUG=false

# -----------------------------------------------------------------------------
# Logging Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# -----------------------------------------------------------------------------
# AWS S3 Additional Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# S3 log prefix for uploaded files
S3_LOG_PREFIX=incident-bot-logs/
# Upload interval in seconds (default: 300 = 5 minutes)
S3_UPLOAD_INTERVAL=300

# -----------------------------------------------------------------------------
# Notification Configuration (OPTIONAL)
# -----------------------------------------------------------------------------
# Cooldown period for notifications in minutes (default: 15)
NOTIFICATION_COOLDOWN_MINUTES=15
# Maximum retention time for notification history in hours (default: 24)
NOTIFICATION_MAX_RETENTION_HOURS=24
# Severity-specific cooldowns (in minutes)
NOTIFICATION_CRITICAL_COOLDOWN_MINUTES=5
NOTIFICATION_ERROR_COOLDOWN_MINUTES=10
NOTIFICATION_WARNING_COOLDOWN_MINUTES=15
NOTIFICATION_INFO_COOLDOWN_MINUTES=15

